CREATE TABLE forum (
  forum_id INT PRIMARY KEY AUTO_INCREMENT,
  forum_detail VARCHAR(255) NOT NULL,
  title VARCHAR(255) NOT NULL,
  forum_date DATETIME NOT NULL,
  user_id CHAR(8) NOT NULL,
  FOREIGN KEY (user_id) REFERENCES user(user_id)
);



