CREATE TABLE post_comment (
  comment_id INT PRIMARY KEY AUTO_INCREMENT,
  comment_detail VARCHAR(255) NOT NULL,
  comment_date DATETIME NOT NULL,
  user_id CHAR(8) NOT NULL,
  post_id INT NOT NULL,
  FOREIGN KEY (user_id) REFERENCES user(user_id),
  FOREIGN KEY (post_id) REFERENCES post(post_id)
);


INSERT INTO post_comment (comment_detail, user_id, post_id)
VALUES ('Great post!', 2, 1),
       ('I love this place too', 3, 1),
       ('I haven''t been here before, but it looks delicious', 4, 1),
       ('Thanks for the recommendation!', 5, 1);